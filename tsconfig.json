{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./",  
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "./*"]
    }
  },
  "include": ["./*", "src/models", "src/database", "src/controllers", "src/server.ts", "src/config/sequelizer.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}






